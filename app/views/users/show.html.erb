<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p><%= link_to 'Edit', edit_user_path(@user) %></p>

<h3>Favorites</h3>
<% @favorite_pictures.each do |favorite_picture| %>
  <div>
    <p><%= favorite_picture.content %></p>
    <p><%= image_tag favorite_picture.image %></p>
    <p><%= favorite_picture.user.name %></p>
    <p><%= link_to 'Show', picture_path(favorite_picture.id) %></p>
  </div>
<% end %>

