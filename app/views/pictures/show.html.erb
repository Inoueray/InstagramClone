<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'un-Fav', favorite_path(id: @favorite.id), method: :delete %>
  <% else %>
    <%= link_to 'Fav', favorites_path(picture_id: @picture.id), method: :post %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
