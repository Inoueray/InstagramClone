<!DOCTYPE html>
<html>
  <head>
    <title>いんすたくろーん</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="container-fluid">
        <ul class="row">
        <% if logged_in? %>
          <li class="col-xs-3"><%= link_to "Home", "/" %></li>
          <li class="col-xs-3"><%= link_to "Post", new_picture_path %></li>
          <li class="col-xs-3"><%= link_to "Profile", user_path(current_user.id) %></li>
          <li class="col-xs-3"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li class="col-xs-4"><%= link_to "Home", "/" %></li>        
          <li class="col-xs-4"> <%= link_to "Sign up", new_user_path %></li>
          <li class="col-xs-4"><%= link_to "Login", new_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="main">
      <div class="main-notice">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </div>
      <div class="main-content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
